<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.zerock.mapper.MemberMapper">

<resultMap id="memberMap" type="org.zerock.domain.MemberVo">
    
        <id property="userid" column="userid"/>
    <!--result로 하면 되지만 pk중복체크가 가능하다. -->
        <result property="userid" column="userid"/>
        <result property="userpw" column="userpw"/>
        <result property="userName" column="username"/>
        <result property="regDate" column="regdate"/>
        <result property="updateDate" column="updatedate"/>
        <collection property="authList" resultMap="authMap">
        </collection>
</resultMap>

    <resultMap id="authMap" type="org.zerock.domain.AuthVO">
        <result property="userid" column="userid"/>
        <result property="auth" column="auth"/>
    </resultMap>

    <!-- select 한 값들이 memberMap에 파라미터에 맞춰서 들어간다-->
    <select id="read" resultMap="memberMap">
        select auth.userid, userpw, username, enabled, regdate, updatedate , auth from tbl_member mem left join tbl_member_auth auth on mem.userid = auth.userid
        where mem.userid = #{userid}
    </select>
</mapper>
